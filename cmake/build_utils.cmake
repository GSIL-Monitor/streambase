	ENDIF()

	IF(LOCAL_LIBRARIES)
		FOREACH(LIB "${LOCAL_LIBRARIES}")
			TARGET_LINK_LIBRARIES(${LOCAL_MODULE} ${LIB}) 
		ENDFOREACH() 
	ENDIF()
ENDMACRO()

