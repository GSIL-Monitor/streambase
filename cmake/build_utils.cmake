	ADD_LIBRARY(${LOCAL_MODULE} STATIC ${LOCAL_C_FILES} ${LOCAL_CXX_FILES} ${LOCAL_ASM_FILES})

	IF(LOCAL_MODULE_LINKER_FLAGS)
